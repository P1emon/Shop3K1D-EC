@model MyEStore.Models.ProfileVM

@{
    ViewData["Title"] = "Your Profile";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f8f9fa;">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4" style="color: #333;">Your Profile</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Success"]</div>
            }

            <form asp-action="Profile" method="post">
                <!-- Username (Read-only) -->
                <div class="mb-4">
                    <label asp-for="UserName" class="form-label fw-bold">Username</label>
                    <input asp-for="UserName" class="form-control form-control-lg bg-light text-dark" readonly style="border: none; box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);" />
                </div>

                <!-- Full Name -->
                <div class="mb-4">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control form-control-lg" style="border: 1px solid #ddd; border-radius: 10px;" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg" style="border: 1px solid #ddd; border-radius: 10px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="mb-4">
                    <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                    <input asp-for="Phone" type="text" class="form-control form-control-lg" style="border: 1px solid #ddd; border-radius: 10px;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" style="border: 1px solid #ddd; border-radius: 10px;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Save Changes Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-lg rounded-pill">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
}
