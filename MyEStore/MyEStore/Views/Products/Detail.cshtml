@using MyEStore.Helpers
@model MyEStore.Entities.HangHoa

@{
    var expectedSlug = ViewData["ExpectedSlug"] as string;
    var imageUrl = ViewData["ImageUrl"] as string;
}

<meta property="og:title" content="@Model.TenHh" />
<meta property="og:description" content="Thông tin sản phẩm: @Model.TenHh - Giá: @Decimal.Parse(@Model.DonGia.ToString()).ToString("N2") $" />
<meta property="og:image" content="@imageUrl" />
<meta property="og:url" content="@Url.Action("Detail", "Products", new { slug = expectedSlug })" />
<meta property="og:type" content="product" />

<link rel="stylesheet" href="~/css/PDetail.css" />

<div class="container py-5">
    <div class="card shadow-lg border-0" style="max-width: 900px; margin: auto; overflow: hidden;">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-5">
                <img src="@Url.Content(imageUrl)" alt="@Model.TenHh" class="img-fluid rounded-start" style="object-fit: cover; height: 100%; max-height: 400px;">
            </div>

            <!-- Product Details -->
            <div class="col-md-7">
                <div class="card-body">
                    <h1 class="card-title fw-bold mb-3">@Model.TenHh</h1>
                    <h2 class="text-danger fw-bold mb-4">
                        @Decimal.Parse(@Model.DonGia.ToString()).ToString("N2") $
                    </h2>

                    <p class="card-text text-muted">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus lacinia odio vitae vestibulum vestibulum. Cras venenatis euismod malesuada.
                    </p>

                    <!-- Add to Cart Form -->
                    <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.MaHh" class="mt-4">
                        <div class="d-flex align-items-center">
                            <label for="qty" class="me-3 fw-bold">Quantity:</label>
                            <input type="number" name="qty" value="1" min="1" class="form-control me-3" style="width: 80px;">
                            <button class="btn btn-dark btn-lg">Add to Cart</button>
                        </div>
                    </form>

                    <!-- Nút chia sẻ -->
                    <div class="social-share mt-3">
                        <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                            <a class="a2a_button_facebook"></a>
                            <a class="a2a_button_twitter"></a>
                            <a class="a2a_button_pinterest"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script async src="https://static.addtoany.com/menu/page.js"></script>
